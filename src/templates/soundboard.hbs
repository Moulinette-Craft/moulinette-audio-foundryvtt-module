<form autocomplete="off" onsubmit="event.preventDefault();">
  <div class="board">
    <div>
      <div class="options">
        
        <i class="fas fa-ellipsis-h"></i>
        <a class="remCol" title="{{localize "MOUSND.remove_col_tooltip"}}"><i class="fas fa-minus-circle"></i></a>
        <a class="addCol" title="{{localize "MOUSND.add_col_tooltip"}}"><i class="fas fa-plus-circle"></i></a>
        
        <i class="fas fa-ellipsis-v"></i>
        <a class="remRow" title="{{localize "MOUSND.remove_row_tooltip"}}"><i class="fas fa-minus-circle"></i></a>
        <a class="addRow" title="{{localize "MOUSND.add_row_tooltip"}}"><i class="fas fa-plus-circle"></i></a>
        
        <i class="spacer"></i>
        {{#unless tiny}}
        <a class="toggle" title="{{localize "MOUSND.toggle_tooltip"}}"><i class="fa-solid fa-eye{{#if hideUnused}}-slash{{/if}}"></i></a>
        <a class="export" title="{{localize "MOUSND.export_tooltip"}}"><i class="fas fa-file-export"></i></a>
        <a class="import" title="{{localize "MOUSND.import_tooltip"}}"><i class="fas fa-file-import"></i></a>
        {{/unless}}
        <a class="list" title="{{localize "MOUSND.list_tooltip"}}"><i class="fa-solid fa-list"></i></a>
      </div>

      <div class="sounds {{#if hideUnused}}hideUnused{{/if}}">
        {{#each sounds as |rows|}}
          <div class="boardrow">
          {{#each rows as |snd|}}
            {{#if snd.path.length}}
              <div class="snd used {{#if snd.size}}size{{snd.size}}{{/if}}{{#unless snd.size}}size1{{/unless}} {{#if snd.playing}}playing{{/if}}" data-slot="{{snd.id}}" draggable="true">
              {{#if snd.playing}}<div class="play-icon">&nbsp;</div>{{/if}}
              {{#if snd.icon}}
                {{#if snd.faIcon}}<i class="{{snd.icon}}" title="{{snd.name}}"></i>{{/if}}
                {{#unless snd.faIcon}}<img class="icon" title="{{snd.name}}" src="{{snd.icon}}" draggable="true"/>{{/unless}}
              {{/if}}
              {{#unless snd.icon}}
                <p>
                  {{#if snd.name}}{{snd.name}}{{/if}}
                  {{#unless snd.name}}{{snd.idx}}{{/unless}}
                </p>
              {{/unless}}
              </div>
            {{/if}}
            {{#unless snd.path.length}}<div class="snd unused" data-slot="{{snd.id}}" draggable="false"><p>{{snd.idx}}</p></div>{{/unless}}
          {{/each}}
          </div>
        {{/each}}
      </div>
    </div>

    {{#if boards}}
      <div class="board_list">
        <h3>Boards</h3>
        <ul>
          {{#each boards as |board|}}
          <li data-idx="{{board.idx}}">
            <a href class="sndBoard">{{board.name}}{{#if board.selected}}<i class="fa-solid fa-star"></i>{{/if}}</a> 
            <a class="edit" title="{{localize "MOUSND.edit_tooltip"}}"><i class="fa-solid fa-pen-to-square"></i></a>
            <a class="delete" title="{{localize "MOUSND.delete_tooltip"}}"><i class="fa-solid fa-trash"></i></a>
          </li>
          {{/each}}
        </ul>
        <div class="options">
          <a class="addBoard" title="{{localize "MOUSND.add_board_tooltip"}}"><i class="fa-solid fa-plus-square"></i></a>
          <i class="spacer"></i>
          <a class="exportAll" title="{{localize "MOUSND.export_all_tooltip"}}"><i class="fas fa-file-export"></i></a>
          <a class="importAll" title="{{localize "MOUSND.import_all_tooltip"}}"><i class="fas fa-file-import"></i></a>
        </div>
      </div>
      
    {{/if}}
  </div>
  
</form>
