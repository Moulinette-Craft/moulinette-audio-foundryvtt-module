<form autocomplete="off" onsubmit="event.preventDefault();">

    <div class="sidebar">

    <nav class="sheet-tabs tabs {{creator}}"></nav>

    <div class="info">{{localize "MOUSND.click_to_toggle"}}</div>

    <div class="search">
        <input id="search" type="text" placeholder="{{localize "MOUSND.search_placeholder"}}"></input>
        <a class="toggleVisibility"><i class="fas fa-eye-slash"></i></a>
    </div>

    <div class="sounds">
        {{#if noAsset}}<div class="error">{{{localize "MOUSND.auth_required"}}}</div>{{/if}}
        
        <div class="categories">
          {{#each categories as |c|}}<a class="cat" data-id="{{c}}"><i class="fa-solid fa-filter fa-xs"></i> {{c}}</a></span>{{/each}}
        </div>

        {{#each assets as |a|}}{{{a}}}{{/each}}
        <div class="warning">{{localize "MOUSND.no_match"}}</div>
    </div>

    <div class="othersoundpads">
      <a class="tabletopaudio"><img src="modules/{{ MODULE_ID }}/img/tabletopaudio-small.png" title="Tabletop Audio"/></a>
      <a class="michaelghelfi"><img src="modules/{{ MODULE_ID }}/img/michaelghelfi-small.png" title="Michael Ghelfi Studios"/></a>
    </div>

    <footer>
      <div class="volume">
        <label>{{localize "MOUSND.volume"}}</label>
        <input class="sound-volume" type="range" title="{{localize "MOUSND.volume"}}" value="{{volume}}" min="0" max="1" step="0.05">
      </div>
      <div class="channel">
        <label>{{localize "MOUSND.channel"}}</label>
        <select class="sound-channel">
            <option value=""></option>
            <option value="music" {{#if (eq channel "music") }}selected{{/if}}>{{localize "AUDIO.CHANNELS.MUSIC.label"}}</option>
            <option value="environment" {{#if (eq channel "environment") }}selected{{/if}}>{{localize "AUDIO.CHANNELS.ENVIRONMENT.label"}}</option>
            <option value="interface" {{#if (eq channel "interface") }}selected{{/if}}>{{localize "AUDIO.CHANNELS.INTERFACE.label"}}</option>
        </select>
      </div>
    </footer>

  </div>


</form>
